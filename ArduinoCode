#include <Servo.h>
Servo myservo;
int pos = 90;

void setup(){
  pinMode(8,OUTPUT);
  myservo.attach(9);
  myservo.write(pos);
  Serial.begin(115200);
  delay(5000);
  Serial.write("AT+CIPMUX=1\r\n");
  delay(5000);
  Serial.write("AT+CIPSTART=4,\"TCP\",\"kritsit.ddns.net\",6000\r\n");
  delay(5000);
}

void loop() {
  if(Serial.available()>0){
   if(Serial.find("a")){
      digitalWrite(8, HIGH);
   }
   if(Serial.find("b")){
      digitalWrite(8, LOW);
   }

   if(Serial.find("c")){
      pos+=20;
      myservo.write(pos);
   }

   if(Serial.find("d")){
      pos-=20;
      myservo.write(pos);
   }

   
  }
   
}