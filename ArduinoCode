#include <Servo.h>
int data = -1;
Servo myservo;
int pos = 90;

void setup(){
  Serial.begin(9600);
  pinMode(8, OUTPUT);
  pinMode(9, OUTPUT);
  myservo.attach(10);
  myservo.write(pos);
}

void loop(){

  if (Serial.available() > 0){
    data = Serial.read();
    if(data==1){
    	digitalWrite(8, HIGH);
    }
    if(data==0){
    	digitalWrite(8, LOW);
    }

    if(data==2){
    	pos+=20;
    	myservo.write(pos);
    }
    if(data==3){
    	pos-=20;
    	myservo.write(pos);
    }
    
    if(data==4){
        unsigned char i, j ;// define variables
        for (i = 0; i <80; i++) // Wen a frequency sound
          {
            digitalWrite (9, HIGH) ;// send voice
            delay (1) ;// Delay 1ms
            digitalWrite (9, LOW) ;// do not send voice
            delay (1) ;// delay ms
          }
          for (i = 0; i <100; i++) // Wen Qie out another frequency sound
          {
            digitalWrite (9, HIGH) ;// send voice
            delay (2) ;// delay 2ms
            digitalWrite (9, LOW) ;// do not send voice
            delay (2) ;// delay 2ms
          }
        
    }
    
  }

}
